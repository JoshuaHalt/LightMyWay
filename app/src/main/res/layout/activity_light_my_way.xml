<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff14e2ff" tools:context=".LightMyWay"
    android:clickable="false">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on"
        android:id="@+id/btnLightOnOff"
        android:checked="false"
        android:clickable="true"
        android:enabled="true"
        android:onClick="ToggleLight"
        android:textOn="Turn off"
        android:textOff="Turn on"
        android:minHeight="125dp"
        android:minWidth="250dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#ff14e2ff"
        android:background="#ff2c00ca"
        android:typeface="sans" />
</RelativeLayout>
